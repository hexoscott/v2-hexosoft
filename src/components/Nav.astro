<header class="nav-bar fixed top-0 left-0 right-0 z-50 border-b border-slate-400/70">
  <nav class="page-container px-6 h-16 flex items-center justify-between">
    <a href="/" class="font-display text-sm font-bold tracking-[0.2em] text-slate-800 uppercase hover:text-ion-blue transition-colors duration-200">
      Hexosoft
    </a>

    <!-- Desktop links -->
    <ul class="hidden md:flex items-center gap-8">
      <li><a href="/#process"      class="nav-link">Our Process</a></li>
      <li><a href="/#case-studies" class="nav-link">Case Studies</a></li>
      <li><a href="/#testimonials" class="nav-link">Testimonials</a></li>
      <li><a href="/#contact"      class="nav-link">Contact</a></li>
    </ul>

    <!-- Menu button (mobile only) -->
    <button
      id="nav-toggle"
      class="md:hidden nav-link"
      aria-expanded="false"
    >Menu</button>
  </nav>

  <!-- Mobile menu panel -->
  <div
    id="nav-mobile"
    class="md:hidden hidden border-t border-slate-400/50"
  >
    <ul class="page-container px-6 py-4 flex flex-col gap-1">
      <li><a href="/#process"      class="nav-link block py-3 border-b border-slate-300/50">Our Process</a></li>
      <li><a href="/#case-studies" class="nav-link block py-3 border-b border-slate-300/50">Case Studies</a></li>
      <li><a href="/#testimonials" class="nav-link block py-3 border-b border-slate-300/50">Testimonials</a></li>
      <li><a href="/#contact"      class="nav-link block py-3">Contact</a></li>
    </ul>
  </div>
</header>

<script>
  const toggle = document.getElementById('nav-toggle');
  const menu   = document.getElementById('nav-mobile');

  toggle?.addEventListener('click', () => {
    const isOpen = menu?.classList.toggle('hidden') === false;
    toggle.setAttribute('aria-expanded', String(isOpen));
    toggle.textContent = isOpen ? 'Close' : 'Menu';
  });

  // Close menu when a link is tapped
  menu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      menu.classList.add('hidden');
      toggle?.setAttribute('aria-expanded', 'false');
      if (toggle) toggle.textContent = 'Menu';
    });
  });
</script>
